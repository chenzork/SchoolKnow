<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/pj_lv_tip" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/font_style"
        android:textSize="16sp"
        android:textColor="@color/weibo_textcolor"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>
    
    <RadioGroup
        android:id="@+id/pj_lv_radio" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">
        <RadioButton
            android:id="@+id/pj_lv_you" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pj_lv_you"
            android:textColor="@color/weibo_textcolor"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/radiobutton_1_selector"
            android:button="@null"
            android:drawablePadding="3dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/pj_lv_liang"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pj_lv_liang"
            android:textColor="@color/weibo_textcolor"
            android:layout_marginRight="10dp"
             android:drawableLeft="@drawable/radiobutton_1_selector"
            android:button="@null"
            android:drawablePadding="3dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/pj_lv_zhong" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pj_lv_zhong"
            android:textColor="@color/weibo_textcolor"
            android:layout_marginRight="10dp"
             android:drawableLeft="@drawable/radiobutton_1_selector"
            android:button="@null"
            android:drawablePadding="3dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/pj_lv_cha" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pj_lv_cha"
            android:textColor="@color/weibo_textcolor"
             android:drawableLeft="@drawable/radiobutton_1_selector"
            android:button="@null"
            android:drawablePadding="3dp"
            android:layout_weight="1"/>
    </RadioGroup>
    

</LinearLayout>
