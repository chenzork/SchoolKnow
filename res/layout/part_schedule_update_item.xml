<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_widget_bg_outer"
    android:minHeight="120dp"
    android:layout_margin="7dp"
    android:orientation="vertical"
    android:paddingBottom="10dp">
    
    <TextView
        android:id="@+id/schedule_update_title"  
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@drawable/bg_label"
       android:paddingLeft="6dp"
       android:textColor="@color/white"
       android:minWidth="100dp"
       android:gravity="center_horizontal|center_vertical"/>
        
        <TextView
        android:id="@+id/schedule_update_subject" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#169CF2"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:drawableLeft="@drawable/pic_subject"
        android:drawablePadding="3dp"/>
        
         <TextView
        android:id="@+id/schedule_update_teacher" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6A6862"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
         android:drawableLeft="@drawable/pic_time"
         android:drawablePadding="3dp"/>
         
          <TextView
        android:id="@+id/schedule_update_classroom" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6A6862"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
         android:drawableLeft="@drawable/pic_address"
         android:drawablePadding="3dp"/>
          
         <TextView
        android:id="@+id/schedule_update_week" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6A6862"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
         android:drawableLeft="@drawable/pic_address"
         android:drawablePadding="3dp"/>
         
          <TextView
        android:id="@+id/schedule_update_jieci" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#6A6862"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
         android:drawableLeft="@drawable/pic_address"
         android:drawablePadding="3dp"/>
    

</LinearLayout>
