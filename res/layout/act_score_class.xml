<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weibo_bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    
    <Spinner
        android:id="@+id/class_score_search_term"  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_select_n"
        android:paddingLeft="20dp"
        android:layout_marginTop="40dp"
        android:textSize="16sp"/>
    
    <TextView
        android:layout_below="@+id/class_score_search_term"
        android:id="@+id/class_score_search_edit" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_your_class"
        android:background="@drawable/spinner_select_n"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:textColor="@color/black"/>
    
    
    <Spinner
        android:layout_below="@+id/class_score_search_edit"
        android:id="@+id/class_score_search_sub"  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_select_n"
        android:paddingLeft="20dp"
        android:textSize="16sp"/>
    
    
    <Button
        android:layout_below="@+id/class_score_search_sub"
        android:id="@+id/score_search_sumbit"  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:background="@drawable/btn_green_selector"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="16sp"/>
    

</RelativeLayout>
