<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weibo_bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    
    
    <EditText
        android:id="@+id/who_edit_id" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/input_id_or_name_to_search"
        android:background="@drawable/radius_listview_default"
        android:paddingLeft="20dp"
        android:layout_marginTop="60dp"
        android:textSize="16sp"/>
    
    <Button
        android:layout_below="@+id/who_edit_id"
        android:id="@+id/who_search_btn"
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="30dp"
        android:background="@drawable/btn_green_selector"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="@string/search"/>
    
    <include layout="@layout/part_bottom_btn"/>
    
</RelativeLayout>
