<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
  
        
      <TextView
     android:id="@+id/catalogTv"
     style="@style/MMListCatalog"
     android:layout_height="wrap_content"
     android:background="@drawable/group_tip"/>
        
    
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:paddingTop="11dp"
	    android:paddingBottom="11dp"
	    android:background="@drawable/press_bg_selector">
	    
	    <ImageView
	        android:id="@+id/right_slide_menu_friend_img"
	        android:layout_width="40dp"
	    	android:layout_height="40dp"
	    	android:contentDescription="@string/app_name"
	    	android:layout_centerVertical="true"
	    	android:layout_marginLeft="10dp"/>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_toRightOf="@+id/right_slide_menu_friend_img"
	    	android:layout_marginLeft="10dp"
	    	android:orientation="vertical">
	    	
	        <LinearLayout 
	            android:layout_width="fill_parent"
	    		android:layout_height="wrap_content"
	    		android:orientation="horizontal">
	            <TextView
			        android:id="@+id/right_slide_menu_friend_name"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:textColor="@color/black"
			    	android:gravity="center_vertical"/> 
			    <TextView
			        android:id="@+id/right_slide_menu_friend_nickname"
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:textColor="@color/black"
			    	android:gravity="center_vertical"
			    	android:textSize="16sp"/> 
	        </LinearLayout>
	        
	        <TextView
		        android:id="@+id/right_slide_menu_friend_mood"
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:textColor="#A9A9A9"
		    	android:gravity="center_vertical"
		    	android:singleLine="false"
		    	android:textSize="12sp"
		    	android:layout_marginTop="3dp"/>        
	    </LinearLayout>
	    
	      

	</RelativeLayout>
	<!-- listview分割线 -->
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.6dp"
	    android:background="#ccc"/>
    
</LinearLayout>

