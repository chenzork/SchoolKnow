<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/press_bg_selector">
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	 <TextView
            android:id="@+id/pj_subject" 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="18sp"
        	android:layout_marginLeft="10dp"
        	android:textColor="#216184"
        	android:padding="5dp"/>   	   
    </LinearLayout>
    
  	<LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="15dp">
    	  <TextView
	        android:id="@+id/pj_teacher" 
	        android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
	       	android:textSize="16sp"
	       	android:textColor="#8883C5"/>  
	       	
    	   <TextView
            android:id="@+id/pj_mark" 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="16sp"
        	android:padding="3dp"
        	android:textColor="#679A90"
        	android:layout_marginLeft="15dp"/> 	 
        <TextView
            android:id="@+id/pj_id" 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="16sp"
        	android:padding="3dp"
        	android:textColor="#8883C5"
        	android:layout_marginLeft="15dp"
        	android:visibility="gone"/> 
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginLeft="15dp">      
        <TextView
            android:id="@+id/pj_demand" 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="12sp"
        	android:padding="3dp"
        	android:textColor="@color/weibo_textcolor"/> 
        	
         <TextView
            android:id="@+id/pj_credit" 
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textSize="12sp"
        	android:padding="3dp"
        	android:layout_marginLeft="10dp"
        	android:textColor="@color/weibo_textcolor"/> 
    	    
    </LinearLayout>
    

</LinearLayout>

