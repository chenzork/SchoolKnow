<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6192C8"
    android:padding="10dp">
   
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/index_countdown_day_layout"
        android:layout_marginRight="8dp">
        
        <TextView
            android:id="@+id/index_countdown_title" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginTop="0dp"
            android:singleLine="true"/>
         <TextView
            android:id="@+id/index_countdown_time" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"/>
         
    </LinearLayout>
    <LinearLayout
        android:id="@+id/index_countdown_day_layout" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        
        <TextView
            android:id="@+id/index_countdown_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="60sp"/>
         <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day"
            android:textColor="@color/white"
            android:textSize="24sp"/>
         
    </LinearLayout>
    

</RelativeLayout>
