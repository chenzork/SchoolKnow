<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weibo_bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    
    <Spinner
        android:id="@+id/score_search_term"  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_select_n"
        android:paddingLeft="20dp"
        android:layout_marginTop="40dp"
        android:textSize="16sp"/>
    
    <EditText
        android:layout_below="@+id/score_search_term"
        android:id="@+id/score_search_edit" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/input_id_or_name_to_search"
        android:background="@drawable/radius_listview_default"
        android:paddingLeft="20dp"
        android:textSize="16sp"
        android:textColor="@color/black"/>
    
    <Button
        android:layout_below="@+id/score_search_edit"
        android:id="@+id/score_search_sumbit"  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:background="@drawable/btn_green_selector"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="16sp"/>
    
   <include layout="@layout/part_bottom_btn"/>
    

</RelativeLayout>
