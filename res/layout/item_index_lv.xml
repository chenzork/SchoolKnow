<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
        android:id="@+id/index_lv_item_catalog" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#5B74AB"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="5dp"/>
        
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="horizontal"
    	android:paddingLeft="10dp"
    	android:paddingRight="10dp"
    	android:layout_marginBottom="5dp">
    	
         <TextView
             android:id="@+id/index_lv_item_type"  
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:layout_weight="10"
             android:textColor="@color/white"
             android:textSize="18sp"
             android:gravity="center_horizontal|center_vertical"/>
         
             <RelativeLayout
                android:id="@+id/index_item_event" 
                android:layout_width="fill_parent"
             	android:layout_height="wrap_content"
             	android:layout_weight="1"
             	android:background="@drawable/index_item_press_bg_selector"
             	android:minHeight="70dp"
             	android:paddingLeft="10dp">
             	
                 <TextView
                     android:id="@+id/index_item_event_title" 
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textSize="20sp"
                     android:textColor="#5F5F5F"
                     android:layout_marginTop="5dp"
                     android:singleLine="true"/>
                 
                  <TextView
                     android:id="@+id/index_item_event_intro" 
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_below="@+id/index_item_event_title"
                     android:layout_marginTop="4dp"
                     android:textColor="#888888"/>
                                 
                 
                 <TextView 
                     android:id="@+id/index_item_event_time"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_below="@+id/index_item_event_intro"
                     android:drawableLeft="@drawable/pic_time"
                     android:textColor="#4E504F"
                     android:drawablePadding="3dp"
                     android:layout_marginTop="10dp"/>
                 
                 <TextView 
                     android:id="@+id/index_item_event_address"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_toRightOf="@+id/index_item_event_time"
                     android:layout_alignTop="@+id/index_item_event_time"
                     android:drawableLeft="@drawable/pic_address"
                     android:textColor="#4E504F"
                     android:layout_marginLeft="10dp"
                     android:drawablePadding="3dp"
                     android:singleLine="true"/>
                 
             </RelativeLayout>
         
         
     </LinearLayout>
    

</LinearLayout>
