<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/weibo_bg"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical">
    
    <Button
        android:id="@+id/exam_arrange_class_select"  
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_select_n"
        android:text="@string/select_your_class"
        android:gravity="left|center_vertical"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp"
        android:textSize="16sp"/>
    
    <Spinner
        android:id="@+id/exam_search_class" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_select_n"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:text="@string/please_select_english_class"
        android:entries="@array/english_class" />
    
    <Button
       	android:id="@+id/exam_search_btn"  
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/search"
        android:background="@drawable/btn_green_selector"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</LinearLayout>
