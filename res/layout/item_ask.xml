<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="@drawable/questionitemupbg">
	    
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/ask_item_user_img" 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/userimage"
                android:contentDescription="@string/app_name"/>
            
            <TextView
                android:id="@+id/ask_item_user_name" 
                android:layout_toRightOf="@+id/ask_item_user_img" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>
            
            <TextView
                android:id="@+id/ask_item_time"
                android:layout_toRightOf="@+id/ask_item_user_img" 
                android:layout_below="@+id/ask_item_user_name"  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#D0D0D0"/>
            
        </RelativeLayout>
        <TextView
            android:id="@+id/ask_item_content" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="6dp"
            android:textSize="16sp"/>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@drawable/questionitembottombg">
        
	    <TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="left"
	        android:text="@string/app_name"
	        android:textColor="#91A9BD"
	        android:padding="3dp"/>
	    
	    <TextView 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="right"
	        android:text="@string/app_name"
	        android:textColor="#91A9BD"
	        android:padding="3dp"/>
	       
	</LinearLayout>
    

</LinearLayout>


