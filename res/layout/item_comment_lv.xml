<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/comment_lv_user_head" 
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/userimage"
        android:contentDescription="@string/app_name"
        android:layout_margin="5dp"
        android:layout_gravity="top"/>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">
        
        <RelativeLayout 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content">
        	
            <TextView
             android:id="@+id/comment_lv_user" 
             android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"
        	 android:textColor="#2861A6"
        	 android:layout_marginLeft="5dp"
        	 android:textSize="16sp"/>
            <TextView
             android:id="@+id/comment_lv_top" 
             android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"
        	 android:layout_alignParentTop="true"
        	 android:layout_alignParentRight="true"
        	 android:textColor="#ACACAC"
        	 android:layout_marginRight="4dp"
        	 android:textSize="13sp"/>
        	<TextView
             android:id="@+id/comment_lv_time" 
             android:layout_width="wrap_content"
        	 android:layout_height="wrap_content"
        	 android:layout_alignParentRight="true"
        	 android:layout_marginRight="8dp"
        	 android:layout_marginBottom="7dp"
        	 android:textColor="#ACACAC"
        	 android:textSize="12sp"/>
            
        </RelativeLayout>
        <TextView
             android:id="@+id/comment_lv_content" 
             android:layout_width="fill_parent"
        	 android:layout_height="wrap_content"
        	 android:textColor="#525252"
        	 android:layout_marginTop="5dp"
        	 android:textSize="16sp"
        	 android:layout_marginLeft="5dp"/>
        
    </LinearLayout>

</LinearLayout>
<include layout="@layout/part_listview_divide"/>
</LinearLayout>
