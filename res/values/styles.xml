<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <!-- activity默认属性 -->
     <style name="ContentOverlay" parent="@android:style/Theme">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowEnterAnimation">@anim/slide_in</item>
		<item name="android:windowExitAnimation">@anim/slide_out</item>
	</style>
	
     <style name="DefaultOverlay" parent="@android:style/Theme">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowContentOverlay">@null</item>
	</style>
	
     <!-- 去除listiview默认属性 -->
    <style name="remove_listview_default">
        <item name="android:listSelector">#00000000</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:background">@null</item>       
    </style>
    
    <style name="tabbar_item">
         <item name="android:button">@null</item>  
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>  
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/tabbar_item_checked</item>
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:layout_weight">1.0</item>         
      </style>
      
    <style name="font_style">
        <item name="android:textColor">#ff999999</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="ask_select_bar">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#6F6F6F</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    
     <style name="register_editor_paddingLeft">
        <item name="android:paddingLeft">20dp</item>
    </style>
    
     <style name="register_btn">
        <item name="android:background">@drawable/btn_blue_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    
      <style name="schedule_week_item_style">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">13sp</item>
         <item name="android:layout_marginRight">1dp</item>
    </style>
    
      <!-- 校友圈动态评论按钮 -->
      <style name="qz_detail_toolbar_icon_style">
          <item name="android:drawablePadding">4dp</item>
          <item name="android:textColor">#7D7D7D</item>
          <item name="android:gravity">center_vertical</item>
          <item name="android:textSize">12sp</item>
      </style>
      
       <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>
    
    <style name="MMListCatalog">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#5E5E5E</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#E3E4E4</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    
    <style name="friend_head_layout">
           <item name="android:paddingTop">10dp</item>
         <item name="android:paddingBottom">10dp</item>
         <item name="android:background">@drawable/press_bg_selector</item>
      </style>
      
     <style name="friend_head_title">
         <item name="android:layout_centerVertical">true</item>
         <item name="android:drawablePadding">10dp</item>
         <item name="android:gravity">center_vertical</item>
         <item name="android:layout_marginLeft">10dp</item>
         <item name="android:textColor">@color/black</item>
         <item name="android:textSize">14sp</item>
     </style>

     <style name="friend_head_arrow">
         <item name="android:layout_width">wrap_content</item>
         <item name="android:layout_height">wrap_content</item>
         <item name="android:src">@drawable/lbs_goto_arrow</item>
         <item name="android:layout_alignParentRight">true</item>
         <item name="android:layout_centerVertical">true</item>
         <item name="android:layout_marginRight">20dp</item>
     </style>

</resources>
